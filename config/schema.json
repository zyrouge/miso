{
    "$schema": "http://json-schema.org/schema",
    "title": "Tofu Config",
    "properties": {
        "discordToken": {
            "title": "Discord Bot Token",
            "type": "string"
        },
        "priviledgedUsers": {
            "title": "Priviledged User IDs",
            "description": "Allows access to developer commands.",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "pingServer": {
            "title": "Ping Server",
            "description": "Should start a ping server?",
            "type": "object",
            "properties": {
                "host": {
                    "title": "Server Host",
                    "type": "string"
                },
                "port": {
                    "title": "Server Port",
                    "type": "number"
                }
            },
            "required": ["host", "port"]
        },
        "discordStatus": {
            "title": "Discord Bot Status",
            "type": "object",
            "properties": {
                "type": {
                    "title": "Status Type",
                    "type": "string",
                    "enum": ["online", "idle", "dnd", "invisible"]
                },
                "text": {
                    "title": "Status Text",
                    "type": "string"
                }
            }
        }
    },
    "required": ["discordToken", "priviledgedUsers"]
}
